@model Product

<body style="background: linear-gradient(to right, #e8f5e9, #f1f8e9); min-height: 100vh;">
    <div class="container py-5">
        <!-- Header -->
        <div class="text-center mb-4">
            <h2 class="fw-bold text-success">
                Tambah Produk Baru
            </h2>
            <p class="text-muted">Lengkapi detail produk agar bisa ditampilkan di daftar menu.</p>
        </div>

        <!-- Form Card -->
        <div class="card shadow-lg rounded-4 border-0 mx-auto" style="max-width: 650px;">
            <!-- Card Header -->
            <div class="card-header bg-success text-white rounded-top-4 py-3">
                <h5 class="mb-0 fw-bold">
                    📝 Form Tambah Produk
                </h5>
            </div>

            <div class="card-body p-4">
                <form method="post" enctype="multipart/form-data" action="Create" class="row g-3">
                    <div class="col-12">
                        <label for="Name" class="form-label fw-bold">Nama Produk</label>
                        <input type="text" id="Name" class="form-control rounded-3" asp-for="Name" placeholder="Masukkan nama produk" />
                    </div>

                    <div class="col-12">
                        <label for="Description" class="form-label fw-bold">Deskripsi</label>
                        <textarea id="Description" class="form-control rounded-3" asp-for="Description" rows="3" placeholder="Masukkan deskripsi produk"></textarea>
                    </div>

                    <div class="col-md-6">
                        <label for="Price" class="form-label fw-bold">Harga</label>
                        <input type="number" id="Price" class="form-control rounded-3" asp-for="Price" placeholder="Masukkan harga produk" />
                    </div>

                    <div class="col-md-6">
                        <label for="Stok" class="form-label fw-bold">Stok</label>
                        <input type="number" id="Stok" class="form-control rounded-3" asp-for="Stok" placeholder="Masukkan jumlah stok" />
                    </div>

                    <div class="col-12">
                        <label for="Image" class="form-label fw-bold">Gambar Produk</label>
                        <input type="file" id="Image" class="form-control rounded-3" name="Image" />
                    </div>

                    <div class="col-12 mt-3">
                        <button type="submit" class="btn btn-success fw-semibold shadow-sm w-100 py-2">
                            <i class="fas fa-plus-circle me-1"></i> Tambah Produk
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <style>
        .form-control:focus {
            border-color: #28a745;
            box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
        }
    </style>
</body>
