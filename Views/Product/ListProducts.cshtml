@model List<Product>

<body style="background: linear-gradient(to right, #e8f5e9, #f1f8e9); min-height: 100vh;">
    <div class="container py-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body">
                <h2 class="fw-bold text-success mb-4 text-center">
                    🥗 Daftar Produk SiAciYummy
                </h2>

                <div class="d-flex justify-content-between mb-3">
                    <a href="/product/Create" class="btn btn-success shadow-sm">
                        <i class="fas fa-plus-circle me-1"></i> Tambah Produk
                    </a>
                </div>

                <div class="table-responsive shadow-sm rounded-3">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="bg-success text-white">
                            <tr>
                                <th>ID</th>
                                <th>Nama</th>
                                <th>Deskripsi</th>
                                <th>Harga</th>
                                <th>Gambar</th>
                                <th>Stok</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model)
                            {
                                <tr class="table-row-hover">
                                    <td>@product.Id</td>
                                    <td class="fw-bold">@product.Name</td>
                                    <td>@product.Description</td>
                                    <td class="text-success fw-semibold">
                                        Rp @product.Price.ToString("N0")
                                    </td>
                                    <td>
                                        <img src="@Url.Content("~/images/" + product.Image)"
                                             alt="@product.Name"
                                             class="img-thumbnail shadow-sm"
                                             style="width: 80px; height: 80px; object-fit: cover; border-radius: 12px;" />
                                    </td>
                                    <td>@product.Stok</td>
                                    <td>
                                        <a href="/product/edit/@product.Id"
                                           class="btn btn-warning btn-sm shadow-sm me-2">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="/product/delete/@product.Id"
                                           class="btn btn-danger btn-sm shadow-sm"
                                           onclick="return confirm('Apakah Anda yakin ingin menghapus produk ini?');">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</body>
