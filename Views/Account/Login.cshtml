<body style="background: linear-gradient(to right, #e8f5e9, #f1f8e9); min-height: 100vh;">

    <div class="container py-5 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
        <div class="row justify-content-center w-100">
            <div class="col-md-5 col-lg-4">

                <!-- Card -->
                <div class="card shadow-lg border-0 rounded-4">

                    <!-- Header -->
                    <div class="card-header bg-success text-white text-center fw-bold rounded-top-4 py-3">
                        <h3 class="mb-0">Login</h3>
                    </div>

                    <!-- Body -->
                    <div class="card-body bg-white rounded-bottom-4 p-4">
                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger text-center rounded-3 mb-3" role="alert">
                                User tidak ditemukan atau password salah.
                            </div>
                        }

                        <form method="post" action="Login">
                            <div class="mb-3">
                                <label for="usernameInput" class="form-label fw-semibold">Username</label>
                                <input type="text"
                                       id="usernameInput"
                                       name="Username"
                                       class="form-control form-control-lg rounded-3 py-2"
                                       placeholder="Masukkan username Anda"
                                       required />
                            </div>

                            <div class="mb-4">
                                <label for="passwordInput" class="form-label fw-semibold">Password</label>
                                <input type="password"
                                       id="passwordInput"
                                       name="Password"
                                       class="form-control form-control-lg rounded-3 py-2"
                                       placeholder="Masukkan password Anda"
                                       required />
                            </div>

                            <!-- Tombol -->
                            <button type="submit" class="btn btn-success btn-lg fw-bold shadow-sm rounded-3 py-2 w-100">
                                Login
                            </button>
                        </form>
                    </div>

                    <!-- Footer -->
                    <div class="card-footer text-center bg-light rounded-bottom-4 py-3">
                        <small class="text-muted">
                            Belum punya akun? <a href="/Account/Register" class="fw-semibold text-success">Daftar di sini</a>
                        </small>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
